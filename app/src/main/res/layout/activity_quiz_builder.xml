<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Header Section -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/header_background"
        android:orientation="vertical"
        android:paddingTop="40dp"
        android:paddingBottom="140dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:elevation="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Back Button and Title Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/back_button_circle"
                android:src="@drawable/ic_arrow_back"
                android:tint="@color/header_blue"
                android:contentDescription="Back"
                android:padding="6dp"
                android:scaleType="fitCenter" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/create_quiz_title"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginEnd="40dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Main Content Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardForm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="-80dp"
        android:background="@color/white"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Quiz ID -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/quiz_id"
                    android:textColor="@color/text_dark"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txtQuizId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="458 522 5569"
                    android:textColor="@color/text_dark"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Quiz Password -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/quiz_password"
                    android:textColor="@color/text_dark"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txtQuizPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2C4mm1"
                    android:textColor="@color/text_dark"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="8dp" />

                <ImageButton
                    android:id="@+id/btnEditPassword"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@android:drawable/ic_menu_edit"
                    android:tint="@color/header_blue"
                    android:contentDescription="Edit Password"
                    android:padding="2dp"
                    android:scaleType="fitCenter" />
            </LinearLayout>

            <!-- Quiz Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/quiz_name"
                android:textColor="@color/text_dark"
                android:textSize="14sp"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/inputTitle"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/spinner_background"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:hint="@string/quiz_name_hint"
                android:textColorHint="#9E9E9E"
                android:textColor="@color/text_dark"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <!-- Question Type -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/question_type"
                android:textColor="@color/text_dark"
                android:textSize="14sp"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:id="@+id/layoutQuestionType"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/spinner_background"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/txtQuestionType"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/multiple_choice_4"
                    android:textColor="@color/text_dark"
                    android:textSize="16sp"
                    android:gravity="center_vertical|start" />

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@android:drawable/arrow_down_float"
                    android:tint="#9E9E9E"
                    android:layout_marginStart="8dp"
                    android:scaleType="fitCenter" />
            </LinearLayout>

            <!-- Number of Question -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/number_of_question"
                android:textColor="@color/text_dark"
                android:textSize="14sp"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/inputNumberOfQuestion"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/spinner_background"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:hint="@string/number_of_question_hint"
                android:textColorHint="#9E9E9E"
                android:textColor="@color/text_dark"
                android:textSize="16sp"
                android:inputType="number"
                android:layout_marginBottom="16dp" />

            <!-- Quiz Duration -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/quiz_duration"
                android:textColor="@color/text_dark"
                android:textSize="14sp"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/inputDuration"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/spinner_background"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:hint="@string/quiz_duration_hint"
                android:textColorHint="#9E9E9E"
                android:textColor="@color/text_dark"
                android:textSize="16sp"
                android:inputType="number"
                android:layout_marginBottom="24dp" />

            <!-- Continue Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnContinue"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="@string/continue_text"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:backgroundTint="@color/header_blue"
                app:cornerRadius="12dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Hidden fields for backward compatibility -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layoutDescription"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/lblCategory"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/actionRow"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerQuestions"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSave"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAddQuestion"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnImport"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>
